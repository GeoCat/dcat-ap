<?xml version="1.0" encoding="UTF-8"?>
<editor xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:gn="http://www.fao.org/geonetwork"
        xmlns:spdx="http://spdx.org/rdf/terms#"
        xmlns:skos="http://www.w3.org/2004/02/skos/core#"
        xmlns:adms="http://www.w3.org/ns/adms#"
        xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
        xmlns:dc="http://purl.org/dc/elements/1.1/"
        xmlns:dct="http://purl.org/dc/terms/"
        xmlns:dcat="http://www.w3.org/ns/dcat#"
        xmlns:vcard="http://www.w3.org/2006/vcard/ns#"
        xmlns:foaf="http://xmlns.com/foaf/0.1/"
        xmlns:owl="http://www.w3.org/2002/07/owl#"
        xmlns:mdcat="https://data.vlaanderen.be/ns/metadata-dcat#"
        xmlns:schema="http://schema.org/"
        xmlns:locn="http://www.w3.org/ns/locn#"
        xsi:noNamespaceSchemaLocation="../../../../../../config-editor.xsd">
  <!-- Define form field types per metadata element. -->
  <fields>
    <for name="dct:description" use="textarea"/>
    <for name="dct:type" xpath="foaf:Agent" use="thesaurus-list-picker">
      <directiveAttributes
        thesaurus="external.theme.publisher-type"
        xpath="/foaf:Agent/dct:type"
        max="1"
        labelKey="dcat.addType"/>
    </for>
    <for name="dcat:theme" use="thesaurus-list-picker">
      <directiveAttributes
        thesaurus="external.theme.datatheme"
        xpath="/dcat:theme"
        max=""
        labelKey="dcat.addThemes"/>
    </for>
    <for name="mdcat:MAGDA-categorie" use="thesaurus-list-picker" profile="metadata-dcat">
      <directiveAttributes
        thesaurus="external.theme.magda-domain"
        xpath="/mdcat:MAGDA-categorie"
        max=""
        labelKey="mdcat.addMagdaCategorie"/>
    </for>
    <for name="mdcat:statuut" use="thesaurus-list-picker">
      <directiveAttributes
        thesaurus="external.theme.GDI-Vlaanderen-trefwoorden"
        xpath="/mdcat:statuut"
        max=""
        labelKey="mdcat.addStatuut"/>
    </for>
  </fields>
  <!-- Complex fields. -->
  <fieldsWithFieldset/>

  <multilingualFields>
    <exclude>
      <name>dct:identifier</name>
    </exclude>
  </multilingualFields>

  <views>
    <view name="default"
          default="true"
          class="gn-label-above-input gn-indent-bluescale"
          displayTooltips="true"
          displayTooltipsMode="onhover">
      <sidePanel>
        <directive data-gn-onlinesrc-list="" data-types="service|dataset"/>
        <directive data-gn-validation-report=""/>
      </sidePanel>

      <thesaurusList>
        <thesaurus key="external.theme.publisher-type" maxtags="1" transformations="" fieldset="false"/>
        <thesaurus key="external.theme.datatheme" maxtags="1" transformations="" fieldset="false"/>
        <thesaurus key="external.theme.frequency" maxtags="1" transformations="" fieldset="false"/>
        <thesaurus key="external.theme.language" maxtags="1" transformations="" fieldset="false"/>
        <thesaurus key="external.theme.resource-type" maxtags="1" transformations="" fieldset="false"/>
        <thesaurus key="external.theme.file-type" maxtags="1" transformations="" fieldset="false"/>
        <thesaurus key="external.theme.media-types" maxtags="1" transformations="" fieldset="false"/>
        <thesaurus key="external.theme.licence-type" maxtags="1" transformations="" fieldset="false"/>
        <thesaurus key="external.theme.status" maxtags="1" transformations="" fieldset="false"/>
        <thesaurus key="external.theme.access-right" maxtags="1" transformations="" fieldset="false"/>
        <thesaurus key="external.theme.levensfase" maxtags="1" transformations="" fieldset="false"/>
        <thesaurus key="external.theme.ontwikkelingstoestand" maxtags="1" transformations="" fieldset="false"/>
      </thesaurusList>

      <tab id="default" default="true" mode="flat">
        <section name="basicInformation">
          <field xpath="/rdf:RDF/dcat:Catalog/dcat:dataset/dcat:Dataset/dct:title"/>
          <action type="add" btnLabel="Todo" or="title" in="/rdf:RDF/dcat:Catalog/dcat:dataset/dcat:Dataset"
                  if="count(rdf:RDF/dcat:Catalog/dcat:dataset/dcat:Dataset/dct:title)=0">
            <template>
              <snippet>
                <dct:title xml:lang="nl"/>
              </snippet>
            </template>
          </action>
          <field xpath="/rdf:RDF/dcat:Catalog/dcat:dataset/dcat:Dataset/dct:description"/>
          <action type="add" btnLabel="Todo" or="description" in="/rdf:RDF/dcat:Catalog/dcat:dataset/dcat:Dataset"
                  if="count(rdf:RDF/dcat:Catalog/dcat:dataset/dcat:Dataset/dct:description)=0">
            <template>
              <snippet>
                <dct:description xml:lang="nl"/>
              </snippet>
            </template>
          </action>
          <!--          <field xpath="/rdf:RDF/dcat:Catalog/dcat:dataset/dcat:Dataset/dct:publisher"/>-->
          <!--          <action type="add" name="TODO" or="publisher" in="/rdf:RDF/dcat:Catalog/dcat:dataset/dcat:Dataset">-->
          <!--            <template>-->
          <!--              <snippet>-->
          <!--                <dct:publisher>-->
          <!--                  <foaf:Agent>-->
          <!--                    <foaf:name xml:lang="nl"/>-->
          <!--                    <dct:type>-->
          <!--                      <skos:Concept>-->
          <!--                        <skos:prefLabel xml:lang="nl"/>-->
          <!--                        <skos:prefLabel xml:lang="en"/>-->
          <!--                        <skos:prefLabel xml:lang="fr"/>-->
          <!--                        <skos:prefLabel xml:lang="de"/>-->
          <!--                        <skos:inScheme rdf:resource="http://purl.org/adms/publishertype/1.0"/>-->
          <!--                      </skos:Concept>-->
          <!--                    </dct:type>-->
          <!--                  </foaf:Agent>-->
          <!--                </dct:publisher>-->
          <!--              </snippet>-->
          <!--            </template>-->
          <!--          </action>-->
          <field xpath="/rdf:RDF/dcat:Catalog/dcat:dataset/dcat:Dataset/dcat:keyword"
                 or="keyword"
                 in="/rdf:RDF/dcat:Catalog/dcat:dataset/dcat:Dataset"/>
          <field xpath="/rdf:RDF/dcat:Catalog/dcat:dataset/dcat:Dataset/mdcat:MAGDA-categorie"
                 or="MAGDA-categorie"
                 in="/rdf:RDF/dcat:Catalog/dcat:dataset/dcat:Dataset"/>
          <field xpath="/rdf:RDF/dcat:Catalog/dcat:dataset/dcat:Dataset/mdcat:statuut"
                 or="statuut"
                 in="/rdf:RDF/dcat:Catalog/dcat:dataset/dcat:Dataset"/>
          <field xpath="/rdf:RDF/dcat:Catalog/dcat:dataset/dcat:Dataset/dcat:theme"
                 or="theme"
                 in="/rdf:RDF/dcat:Catalog/dcat:dataset/dcat:Dataset"/>
          <field xpath="/rdf:RDF/dcat:Catalog/dcat:dataset/dcat:Dataset/dct:identifier"
                 or="identifier"
                 in="/rdf:RDF/dcat:Catalog/dcat:dataset/dcat:Dataset"/>
        </section>
        <section name="extraInformation">
        </section>
      </tab>

      <tab id="record" mode="flat">
        <section name="catalogRecordInformation">
          <field xpath="/rdf:RDF/dcat:Catalog/dcat:record/dcat:CatalogRecord/dct:title"/>
          <field xpath="/rdf:RDF/dcat:Catalog/dcat:record/dcat:CatalogRecord/dct:description"/>
          <field xpath="/rdf:RDF/dcat:Catalog/dcat:record/dcat:CatalogRecord/dct:identifier"/>
          <field xpath="/rdf:RDF/dcat:Catalog/dcat:record/dcat:CatalogRecord/dct:modified"/>
          <field xpath="/rdf:RDF/dcat:Catalog/dcat:record/dcat:CatalogRecord/dct:issued"/>
          <field xpath="/rdf:RDF/dcat:Catalog/dcat:record/dcat:CatalogRecord/dct:language"/>
        </section>
        <section name="conformToInformation">
          <field xpath="/rdf:RDF/dcat:Catalog/dcat:record/dcat:CatalogRecord/dct:conformsTo/dct:Standard/dct:title"/>
          <field
            xpath="/rdf:RDF/dcat:Catalog/dcat:record/dcat:CatalogRecord/dct:conformsTo/dct:Standard/dct:description"/>
          <field
            xpath="/rdf:RDF/dcat:Catalog/dcat:record/dcat:CatalogRecord/dct:conformsTo/dct:Standard/owl:versionInfo"/>
        </section>
      </tab>
      <flatModeExceptions>
        <for name="dcat:keyword"/>
        <for name="dcat:theme"/>
      </flatModeExceptions>
    </view>

    <view name="xml">
      <sidePanel>
        <directive data-gn-validation-report=""/>
      </sidePanel>
      <tab id="xml" default="true"/>
    </view>
  </views>
  <batchEditing>
    <section name="identification">
      <field name="title" xpath="/rdf:RDF/dcat:Catalog/dcat:dataset/dcat:Dataset/dct:title"/>
    </section>
  </batchEditing>
</editor>
